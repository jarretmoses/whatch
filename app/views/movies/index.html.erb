<h3> Welcome<% if current_user %>, <%= current_user.name %><% end %>! </h3>

<h2> <%= @movie.title %> </h2> 

<div id="trailer">
  <iframe width="560" height="315" src="//www.youtube.com/embed/<%= @movie.source_id %>?rel=0&autoplay=1&showinfo=0&controls=0&iv_load_policy=3" frameborder="0" allowfullscreen></iframe>
</div>

<% if current_user %>

  <div class="buttons">

    <%= button_to 'No', ratings_path, params: {score: 0, movie_id: @movie.id}, remote: true, method: :post %>
    <%= button_to 'Maybe', ratings_path, params: {score: 1, movie_id: @movie.id}, remote: true, method: :post%>
    <%= button_to 'Yes', ratings_path, params: {score: 2, movie_id: @movie.id}, remote: true, method: :post %>

  </div>

	<%= link_to 'My Movies!',list_path, id: "my_movies" %>

<% end %>
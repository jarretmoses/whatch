<section>
    <div class="container text-center wow fadeIn">
        <h2>Movies to Whatch</h2>
        <hr class="colored">

        <div class="row content-row">
            <div class="col-lg-12">
                <div class="portfolio-filter">
                    <ul id="filters" class="clearfix"> 
                        <li>
                            <span class="filter active" data-filter="yes maybe">All</span>
                        </li>
                        <li>
                            <span class="filter" data-filter="yes">Yes</span>
                        </li>
                        <li>
                            <span class="filter" data-filter="maybe">Maybe</span>
                        </li>
                        <li>
                        <!-- id="showLeftPush" for push menu-->
                            <span id="showLeft">Genre</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div id="portfoliolist">
                    <%= render "posters" %>
                </div>
            </div>
        </div>
    </div>
</section>

<nav class="cbp-spmenu cbp-spmenu-vertical cbp-spmenu-left" id="cbp-spmenu-s1">
    <h3>Menu</h3>
    <!-- Genres -->
    <% @genres.each do |genre| %>
        <a href="#"><span class="filter" data-filter="<%= genre.name %>"><%= genre.name %></span></a>
    <% end %> 
</nav>

